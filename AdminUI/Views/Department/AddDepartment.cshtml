@model  Entities.Concrete.Department
@{
    ViewBag.Title = "AddDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Departman Ekleme Sayfası</h1>

<br />

@using (Html.BeginForm("AddDepartment", "Department", FormMethod.Post))
{

    <div class="form-group">

        @Html.Label("Departman Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br /><br />
        @*@Html.ValidationMessageFor(x => x.CategoryDescription)*@
        <br /><br />
        <button class="btn btn-info">Kaydet</button>

    </div>
}

