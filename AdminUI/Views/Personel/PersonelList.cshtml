@model List<Entities.Concrete.Personel>
@{
    ViewBag.Title = "PersonelList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-hover">
    <br />
    <a href="/Personel/AddPersonel" class="btn btn-primary">Personel Ekle</a>
    <tr>
        <th>ID</th>
        <th>Adı</th>
        <th>Soyadı</th>
        <th>Telefon</th>
        <th>Departman</th>
        <th>Doğum Tarihi</th>
        <th>Yönetici Bilgileri</th>
        <th>Resimleri</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Tel</td>
            <td>@item.Department.Name</td>
            <td>@item.DateOfBirth</td>
            <td>@item.Director.Name</td>

            <td><a href="/Personel/GetPersonelImage/@item.Id">@item.Name @item.Surname </a></td>
            <td><a href="/Personel/EditPersonel/@item.Id" class="btn btn-info">Düzenle</a></td>
            <td><a href="/Personel/DeletePersonel/@item.Id" class="btn btn-warning">Sil</a></td>
        </tr>
    }
</table>